#:kivy 1.11.1

<GUIPanel>
    FloatLayout:
        canvas:
            Color:
                rgba: 1, 1, 0, 1
            Rectangle:
                # self here refers to the widget i.e FloatLayout
                pos: self.pos
                size: self.size
    Button:
        text: 'Hello World!!'
        size_hint: .5, .5
        pos_hint: {'center_x':0.5, 'center_y': .5}